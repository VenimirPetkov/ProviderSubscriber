{
  "name": "provider-subscriber",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:verbose": "npx hardhat test --verbose",
    "clean": "npx hardhat clean",
    "deploy": "npx hardhat ignition deploy ignition/modules/ProviderSubscriber.ts --network localhost",
    "deploy:hoodi": "npx hardhat ignition deploy ignition/modules/ProviderSubscriber.ts --network hoodi",
    "deploy:mainnet": "npx hardhat ignition deploy ignition/modules/ProviderSubscriber.ts --network mainnet",
    "deploy:fork": "npx hardhat ignition deploy ignition/modules/ProviderSubscriber.ts --network mainnetFork",
    "deploy:full": "npx hardhat run scripts/deploy-and-initialize.ts --network localhost",
    "deploy:full:hoodi": "npx hardhat run scripts/deploy-and-initialize.ts --network hoodi",
    "deploy:full:mainnet": "npx hardhat run scripts/deploy-and-initialize.ts --network mainnet",
    "deploy:full:fork": "npx hardhat run scripts/deploy-and-initialize.ts --network mainnetFork",
    "init:proxy": "npx hardhat run scripts/initialize-deployed-proxy.ts --network localhost",
    "init:proxy:hoodi": "npx hardhat run scripts/initialize-deployed-proxy.ts --network hoodi",
    "init:proxy:mainnet": "npx hardhat run scripts/initialize-deployed-proxy.ts --network mainnet",
    "init:proxy:fork": "npx hardhat run scripts/initialize-deployed-proxy.ts --network mainnetFork",
    "node": "npx hardhat node",
    "coverage": "npx hardhat coverage",
    "size": "npx hardhat size-contracts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:solidity": "prettier --write \"contracts/**/*.sol\" --plugin=prettier-plugin-solidity",
    "format:typescript": "prettier --write \"scripts/**/*.ts\" \"test/**/*.ts\"",
    "precommit": "npm run format:check && npm run clean && npm run compile && npm run test"
  },
  "keywords": [],
  "author": "",
  "license": "BUSL-1.1",
  "description": "",
  "devDependencies": {
    "@chainlink/contracts": "^1.4.0",
    "@nomicfoundation/hardhat-ignition": "^3.0.3",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "@types/node": "^22.18.3",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.6",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.4.3",
    "typescript": "~5.8.0",
    "viem": "^2.37.5"
  }
}
